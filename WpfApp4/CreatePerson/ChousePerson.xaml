        <Button x:Name="ManButton" Content="Мужчина" HorizontalAlignment="Left" Margin="92,249,0,0" VerticalAlignment="Top" Width="121" Height="50" Click="ManButton_Click"/>
        <Button x:Name="WomanButton" Content="Женщина" HorizontalAlignment="Left" Margin="502,249,0,0" VerticalAlignment="Top" Width="147" Height="50" Click="WomanButton_Click"/>

    </Grid>
</Window>
