            </Button.Resources>
        </Button>
        <Button x:Name="button1" Content="Встать в боевую стойку" Foreground="#d3d3d3" Background="#1d1d1d" HorizontalAlignment="Left" Margin="10,362,0,0" VerticalAlignment="Top" Width="679" Height="61" Click="button1_Click">
