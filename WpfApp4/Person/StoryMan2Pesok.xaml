        <Button x:Name="button" Content="Вы добиваете противника" HorizontalAlignment="Left" Margin="126,281,0,0" VerticalAlignment="Top" Width="147" Height="61"/>
        <Button x:Name="button1" Content="Встать в боевую стойку" HorizontalAlignment="Left" Margin="494,281,0,0" VerticalAlignment="Top" Width="160" Height="61" Click="button1_Click"/>

    </Grid>
